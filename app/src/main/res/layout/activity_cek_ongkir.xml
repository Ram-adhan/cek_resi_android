<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CekOngkirActivity">

    <TextView
        android:id="@+id/labelOrigin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:labelFor="@id/cekOngkirEtOrigin"
        android:text="@string/origin"
        android:textSize="@dimen/small_text"
        app:layout_constraintLeft_toLeftOf="@id/cekOngkirEtOrigin"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/labelDestiniation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:labelFor="@id/cekOngkirEtDestination"
        android:text="@string/destination"
        android:textSize="@dimen/small_text"
        app:layout_constraintLeft_toLeftOf="@id/cekOngkirEtDestination"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/cekOngkirEtOrigin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edittext_state"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cekOngkirEtDestination"
        app:layout_constraintTop_toBottomOf="@id/labelOrigin" />

    <EditText
        android:id="@+id/cekOngkirEtDestination"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/edittext_state"
        android:importantForAutofill="no"
        android:inputType="text"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/cekOngkirEtOrigin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/cekOngkirEtOrigin" />

</androidx.constraintlayout.widget.ConstraintLayout>