<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.OngkirSetupFragment">

    <ScrollView
        android:id="@+id/cekOngkirScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/cekOngkirButtonCalculate"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/labelOrigin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:labelFor="@id/cekOngkirEtOrigin"
                android:text="@string/origin"
                android:textSize="@dimen/small_text"
                app:layout_constraintBottom_toTopOf="@id/cekOngkirEtOrigin"
                app:layout_constraintLeft_toLeftOf="@id/cekOngkirEtOrigin"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/hint_origin"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="4dp"
                android:clickable="true"
                android:contentDescription="@string/hint_help"
                android:focusable="true"
                android:src="@drawable/ic_help"
                app:layout_constraintBottom_toBottomOf="@id/labelOrigin"
                app:layout_constraintLeft_toRightOf="@id/labelOrigin"
                app:layout_constraintTop_toTopOf="@id/labelOrigin" />

            <ImageView
                android:id="@+id/deleteInputTextOrigin"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:clickable="true"
                android:contentDescription="@string/hint_help"
                android:focusable="true"
                android:src="@drawable/ic_close"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/labelOrigin"
                app:layout_constraintRight_toRightOf="@id/cekOngkirEtOrigin"
                app:layout_constraintTop_toTopOf="@id/labelOrigin" />

            <AutoCompleteTextView
                android:id="@+id/cekOngkirEtOrigin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/edittext_state"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelOrigin" />

            <ProgressBar
                android:id="@+id/loadingOrigin"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:padding="4dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/cekOngkirEtOrigin"
                app:layout_constraintRight_toRightOf="@id/cekOngkirEtOrigin"
                app:layout_constraintTop_toTopOf="@id/cekOngkirEtOrigin" />

            <TextView
                android:id="@+id/labelDestination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:labelFor="@id/cekOngkirEtDestination"
                android:text="@string/destination"
                android:textSize="@dimen/small_text"
                app:layout_constraintLeft_toLeftOf="@id/cekOngkirEtDestination"
                app:layout_constraintTop_toBottomOf="@id/cekOngkirEtOrigin" />

            <ImageView
                android:id="@+id/hint_destination"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="4dp"
                android:clickable="true"
                android:contentDescription="@string/hint_help"
                android:focusable="true"
                android:src="@drawable/ic_help"
                app:layout_constraintBottom_toBottomOf="@id/labelDestination"
                app:layout_constraintLeft_toRightOf="@id/labelDestination"
                app:layout_constraintTop_toTopOf="@id/labelDestination" />

            <ImageView
                android:id="@+id/deleteInputTextDestination"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:clickable="true"
                android:contentDescription="@string/hint_help"
                android:focusable="true"
                android:src="@drawable/ic_close"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/labelDestination"
                app:layout_constraintRight_toRightOf="@id/cekOngkirEtDestination"
                app:layout_constraintTop_toTopOf="@id/labelDestination" />

            <AutoCompleteTextView
                android:id="@+id/cekOngkirEtDestination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/edittext_state"
                android:importantForAutofill="no"
                android:inputType="text"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelDestination" />

            <ProgressBar
                android:id="@+id/loadingDestination"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:padding="4dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/cekOngkirEtDestination"
                app:layout_constraintRight_toRightOf="@id/cekOngkirEtDestination"
                app:layout_constraintTop_toTopOf="@id/cekOngkirEtDestination" />

            <TextView
                android:id="@+id/labelWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:labelFor="@id/cekOngkirEtWeight"
                android:text="@string/weight_gram"
                android:textSize="@dimen/small_text"
                app:layout_constraintLeft_toLeftOf="@id/cekOngkirEtWeight"
                app:layout_constraintTop_toBottomOf="@id/cekOngkirEtDestination" />

            <ImageView
                android:id="@+id/deleteInputTextWeight"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:clickable="true"
                android:contentDescription="@string/hint_help"
                android:focusable="true"
                android:src="@drawable/ic_close"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/labelWeight"
                app:layout_constraintRight_toRightOf="@id/cekOngkirEtWeight"
                app:layout_constraintTop_toTopOf="@id/labelWeight" />

            <EditText
                android:id="@+id/cekOngkirEtWeight"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/edittext_state"
                android:importantForAutofill="no"
                android:inputType="number"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="8dp"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelWeight" />

            <TextView
                android:id="@+id/labelCourierList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="@string/courier"
                android:textSize="@dimen/small_text"
                app:layout_constraintLeft_toLeftOf="@id/cekOngkirEtWeight"
                app:layout_constraintTop_toBottomOf="@id/cekOngkirEtWeight" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chipGroupCourier"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelCourierList"
                app:selectionRequired="true" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cekOngkirButtonCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/material_button_color_state"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/check"
        android:textColor="@android:color/white"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cekOngkirScrollView"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>